{
    "name": "@chemistry/space-groups",
    "version": "1.0.0",

    "description": "Library that contains List of space groups; This project is a part of [CHEMISTRY JS] project by Volodymyr Vreshch",

    "author": {
        "name": "Volodymyr Vreshch",
        "url": "http://vreshch.com/"
    },

    "keywords": [
        "cheminformatics",
        "crystallography",
        "space groups"
    ],

    "private": true,

    "main": "dist/space-groups.min.js",
    "typings": "dist/src/space-groups.d.ts",

    "scripts": {
        "build": "npm run clean && npm run build:prod",
        "build:dev": "webpack --output-filename space-groups.js --config etc/webpack.config.dev.js",
        "build:prod": "webpack --output-filename space-groups.min.js --config etc/webpack.config.prd.js",
        "build:ts": "tsc -m es6 --outDir lib-space-groups",

        "clean": "rimraf dist/* coverage/*",

        "test": "rimraf coverage/* && npm run test:node && npm run test:browser && npm run test:node-coverage",
        "test:node": "ts-node node_modules/jasmine/bin/jasmine.js JASMINE_CONFIG_PATH=etc/jasmine.json",
        "test:node-coverage": "ts-node node_modules/istanbul/lib/cli.js cover -e .ts  -x \"*.d.ts\" -x \"*.spec.ts\" node_modules/jasmine/bin/jasmine.js -- JASMINE_CONFIG_PATH=etc/jasmine.json",
        "test:browser": "karma start --single-run --no-auto-watch etc/karma.conf.js",

        "tdd": "karma start etc/karma.conf.js --auto-watch ",

        "lint": "tslint 'src/**/*.ts' ",
        "lintfix": "tslint 'src/**/*.ts' --fix",

        "codecov": "codecov -t f7e73766-d8e8-406d-bc14-b15e6f26434f < coverage/lcov.info"
    },

    "dependencies": {
        "babel-cli": "6.18.0",
        "babel-core": "6.4.0",
        "babel-loader": "6.2.10",
        "babel-preset-es2015": "6.3.13",
        "babel-plugin-add-module-exports": "0.2.1",

        "ts-node": "3.0.2",
        "typescript": "2.1.5",
        "tslint": "4.4.2",
        "@types/jasmine": "2.5.35",
        "istanbul": "1.1.0-alpha.1",

        "cross-env": "2.0.1",
        "jasmine": "2.5.2",
        "jasmine-core": "2.4.1",
        "loader-utils": "0.2.12",
        "rimraf": "2.5.0",

        "webpack": "2.2.1",
        "awesome-typescript-loader": "3.0.8",
        "codecov": "2.1.0",

        "karma": "0.13.19",
        "karma-jasmine": "0.3.6",
        "karma-webpack": "2.0.2",
        "karma-mocha-reporter": "2.0.3",
        "karma-phantomjs-launcher": "1.0.2"
    }
}
