{
    "parser": "babel-eslint",
    "extends" : [
        "standard"
    ],
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "space-before-function-paren": ["error", { "anonymous": "never", "named": "never" }]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jasmine": true
    },

    "plugins": [
        "babel",
        "jasmine"
    ],

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}
